<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab idMso="TabAddIns" label="Roominfo Remote" >
        <group id="roomInfoRemoteRooms" label="Rooms">
          <dropDown id="roomsDropDown" onAction="OnRoomsDropDownAction">
            <item id="item1" label="Item 1" />
            <item id="item2" label="Item 2" />
            <item id="item3" label="Item 3" />
          </dropDown>
          <dropDown id="occupancyDropDown" onAction="OnOccupancyDropDownAction">
            <item id="free" label="Free"/>
            <item id="present" label="Present" />
            <item id="absent" label="Absent" />
            <item id="busy" label="Busy" />
            <item id="occupied" label="Occupied" />
            <item id="locked" label="Locked" />
          </dropDown>
          <button id="agendaButton" label="Agenda" onAction="OnAction" />
          <button id="recycleButton" label="Recycle" onAction="OnAction" />
        </group>
      <group id="roomInfoRemoteSettings" label="Settings">
          <editBox id="tcpPort" onChange="OnChange" showLabel="true" label="TCP Port:" getText="OnGetText"/>
          <editBox id="udpPort" onChange="OnChange" showLabel="true" label="UDP Port:"/>
        </group>
      </tab>      
    </tabs>
  </ribbon>
</customUI>

